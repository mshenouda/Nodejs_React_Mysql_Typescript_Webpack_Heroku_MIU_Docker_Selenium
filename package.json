{
  "name": "node-js-typescript-mysql-rest-api",
  "version": "1.0.0",
  "description": "Rest API using Node.js, TypeScript, Express, Mysql",
  "main": "server.ts",
  "engines": {
    "node": "20.11.0",
    "npm": "10.2.4"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "heroku-prebuilds": "cd ./frontend && npm install",
    "build": "cd ./backend && tsc && npm run start",
    "build:frontend": "cd ./frontend && webpack --config ./webpack/webpack.config.prod.js --mode production",
    "start": "NODE_ENV=production&& node ./build/server.js",
    "heroku-postbuilds": "cd ./frontend && serve -s build",
    "webpack-dev": "cd ./frontend && webpack serve --config ./webpack.config.dev.js --mode development",
    "dev": "set NODE_ENV=development&&cd ./backend && node ./build/server.js"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "mysql",
    "mysql2",
    "restapi",
    "rest",
    "api",
    "crud"
  ],
  "author": "bezkoder",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "mysql2": "^3.4.3",
    "serve": "^14.2.1"
  }
}
