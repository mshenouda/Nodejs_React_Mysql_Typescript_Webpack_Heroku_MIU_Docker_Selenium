{
  "name": "node-js-typescript-mysql-rest-api",
  "version": "1.0.0",
  "description": "Rest API using Node.js, TypeScript, Express, Mysql",
  "main": "./backend/server.ts",
  "engines": {
    "node": "20.11.0",
    "npm": "10.2.4"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "heroku-prebuild": "npm i --save && cd ./frontend && npm i --only=dev && npm i --save",
    "build": "cd ./frontend && rimraf ./build && npm run build && NODE_ENV=production&&cd ./../backend && rimraf ./build && tsc",
    "starts": "cd ./backend && node ./build/server.js",
    "startss": "cd ./backend && node ./build/server.js && cd ../ && ls -l",
    "startsss": "cd ./frontend && serve -s ./build && cd ./../backend && ls -l",
    "start": "concurrently \"cd ./backend && node ./build/server.js\" \"cd ./frontend && npm run start\"",
    "webpack-dev": "cd ./frontend && webpack serve --config ./webpack.config.dev.js --mode development",
    "dev": "set NODE_ENV=development&&cd ./backend && tsc && node ./build/server.js"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "mysql",
    "mysql2",
    "webpack",
    "restapi",
    "rest",
    "api",
    "crud"
  ],
  "author": "bezkoder",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "mini-css-extract-plugin": "^2.8.0",
    "mysql2": "^3.4.3",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  }
}
